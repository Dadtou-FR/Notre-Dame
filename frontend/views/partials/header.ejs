        <script>
        // Gérer l'état "active" persistant pour les boutons de la barre de navigation
        document.addEventListener('DOMContentLoaded', function() {
            try {
                const links = Array.from(document.querySelectorAll('.sidebar-nav .nav-link'));
                if (!links || links.length === 0) return;

                // Helper : normaliser un href pour comparaison (supprimer slash final)
                const normalize = href => (href || '').replace(/\/$/, '') || '/';

                const currentPath = normalize(window.location.pathname);
                const stored = localStorage.getItem('sidebar_active_href');

                // Définir l'élément actif : priorité au stored, sinon au chemin courant
                const targetHref = stored ? normalize(stored) : currentPath;

                let matched = false;
                links.forEach(l => {
                    const href = normalize(l.getAttribute('href'));
                    // Marquer actif si href correspond exactement ou si c'est la racine et le chemin est '/'
                    if (href === targetHref) {
                        l.classList.add('active');
                        matched = true;
                    } else {
                        l.classList.remove('active');
                    }
                });

                // Si aucun lien n'a été matché par stored ou pathname, essayer une correspondance "startsWith"
                if (!matched) {
                    links.forEach(l => {
                        const href = normalize(l.getAttribute('href'));
                        if (href !== '/' && currentPath.startsWith(href)) {
                            l.classList.add('active');
                            matched = true;
                        }
                    });
                }

                // Ajouter le gestionnaire de clic : met à jour la classe active et persiste dans localStorage
                links.forEach(l => l.addEventListener('click', function() {
                    try { localStorage.setItem('sidebar_active_href', this.getAttribute('href')); } catch (e) { /* silence */ }
                    links.forEach(x => x.classList.remove('active'));
                    this.classList.add('active');
                }));
            } catch (e) {
                console.warn('Erreur initialisation sidebar active state', e);
            }
        });
        </script>

