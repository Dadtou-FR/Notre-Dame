<script>
function clearForm() {
  if (confirm('Êtes-vous sûr de vouloir effacer tous les champs ?')) {
    document.getElementById('notesForm').reset();
    document.getElementById('autocomplete-list').classList.remove('active');
  }
}

// Autocomplétion pour le numéro matricule
const inputMatricule = document.getElementById('numero_matricule');
const autocompleteList = document.getElementById('autocomplete-list');
let currentHighlightedIndex = -1;

inputMatricule.addEventListener('input', async function(e) {
  const value = e.target.value.trim();
  
  if (value.length === 0) {
    autocompleteList.classList.remove('active');
    autocompleteList.innerHTML = '';
    currentHighlightedIndex = -1;
    return;
  }
  
  try {
    const response = await fetch(`/notes/search-students?q=${encodeURIComponent(value)}`);
    const results = await response.json();
    
    autocompleteList.innerHTML = '';
    
    if (results.length === 0) {
      autocompleteList.innerHTML = '<li class="no-results">Aucun étudiant trouvé</li>';
      autocompleteList.classList.add('active');
      currentHighlightedIndex = -1;
    } else {
      results.forEach((etudiant, index) => {
        const li = document.createElement('li');
        li.className = 'autocomplete-item';
        li.innerHTML = `
          <span class="autocomplete-item-text">${etudiant.numero_matricule}</span>
          <span class="autocomplete-item-sub">${etudiant.nom_complet} - ${etudiant.classe}</span>
        `;
        
        li.addEventListener('click', function() {
          inputMatricule.value = etudiant.numero_matricule;
          autocompleteList.classList.remove('active');
          autocompleteList.innerHTML = '';
          currentHighlightedIndex = -1;
          inputMatricule.focus();
        });
        
        li.addEventListener('mouseenter', function() {
          // Enlever la classe du précédent élément surlighté
          const previousHighlighted = autocompleteList.querySelector('.highlighted');
          if (previousHighlighted) {
            previousHighlighted.classList.remove('highlighted');
          }
          li.classList.add('highlighted');
          currentHighlightedIndex = index;
        });
        
        li.addEventListener('mouseleave', function() {
          li.classList.remove('highlighted');
          currentHighlightedIndex = -1;
        });
        
        autocompleteList.appendChild(li);
      });
      autocompleteList.classList.add('active');
      currentHighlightedIndex = -1;
    }
  } catch (error) {
    console.error('Erreur lors de la recherche:', error);
    autocompleteList.innerHTML = '<li class="no-results">Erreur lors de la recherche</li>';
    autocompleteList.classList.add('active');
  }
});

// Navigation au clavier dans la liste d'autocomplétion
inputMatricule.addEventListener('keydown', function(e) {
  const items = autocompleteList.querySelectorAll('.autocomplete-item');
  
  if (e.key === 'ArrowDown') {
    e.preventDefault();
    if (currentHighlightedIndex < items.length - 1) {
      currentHighlightedIndex++;
      updateHighlight(items);
    }
  } else if (e.key === 'ArrowUp') {
    e.preventDefault();
    if (currentHighlightedIndex > 0) {
      currentHighlightedIndex--;
      updateHighlight(items);
    }
  } else if (e.key === 'Enter') {
    e.preventDefault();
    if (currentHighlightedIndex >= 0 && currentHighlightedIndex < items.length) {
      items[currentHighlightedIndex].click();
    } else if (autocompleteList.classList.contains('active')) {
      autocompleteList.classList.remove('active');
    }
  } else if (e.key === 'Escape') {
    autocompleteList.classList.remove('active');
    currentHighlightedIndex = -1;
  }
});

function updateHighlight(items) {
  items.forEach((item, index) => {
    if (index === currentHighlightedIndex) {
      item.classList.add('highlighted');
      item.scrollIntoView({ block: 'nearest' });
    } else {
      item.classList.remove('highlighted');
    }
  });
}

// Fermer la liste quand on clique ailleurs
document.addEventListener('click', function(e) {
  if (e.target !== inputMatricule && !e.target.closest('.autocomplete-container')) {
    autocompleteList.classList.remove('active');
    currentHighlightedIndex = -1;
  }
});
</script>

