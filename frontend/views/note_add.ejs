    gap: 10px;
    margin-top: 20px;
  }
  
  .instructions {
    background: #e3f2fd;
    border-left: 4px solid #2196F3;
    padding: 15px;
    border-radius: 4px;
    margin-bottom: 20px;
  }
  
  /* Styles pour l'autocomplétion */
  .autocomplete-container {
    position: relative;
    width: 100%;
  }
  
  .autocomplete-input {
    width: 100%;
  }
  
  .autocomplete-list {
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    background: white;
    border: 1px solid #ddd;
    border-top: none;
    border-radius: 0 0 4px 4px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    max-height: 300px;
    overflow-y: auto;
    z-index: 1000;
    display: none;
    list-style: none;
    margin: 0;
    padding: 0;
  }
  
  .autocomplete-list.active {
    display: block;
  }
  
  .autocomplete-item {
    padding: 10px 15px;
    cursor: pointer;
    border-bottom: 1px solid #f0f0f0;
    transition: background-color 0.2s;
  }
  
  .autocomplete-item:hover,
  .autocomplete-item.highlighted {
    background-color: #f5f5f5;
  }
  
  .autocomplete-item:last-child {
    border-bottom: none;
  }
  
  .autocomplete-item-text {
    display: block;
    font-weight: 500;
    color: #333;
  }
  
  .autocomplete-item-sub {
    display: block;
    font-size: 0.85em;
    color: #666;
    margin-top: 4px;
  }
  
  .no-results {
    padding: 15px;
    text-align: center;
    color: #999;
  }
</style>

